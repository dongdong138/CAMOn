
@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/homepage.css" asp-append-version="true" />

<div class="row">
    <div class="col-md-6 text-box-container">
        <div class="text-box">
            <p>
                <span class="highlight">A Complete Solution</span> for all your <span class="highlight">security</span> needs.
            </p>
        </div>
    </div>
    <div class="col-md-6 sidebar-image">
        <img src="~/HomeImages/cameraImage1.png" alt="Camera Image" class="img-fluid">
    </div>
</div>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="divider">
                <div class="line left"></div>
                <img src="~/HomeImages/cameraImage2.png" alt="Camera Image" class="img-fluid">
                <div class="line right"></div>
            </div>
        </div>
    </div>
    <div class="security-box text-center">
        <h2><span class="highlight">CAM'ON</span> RANGE OF <span class="highlight">SECURITY</span> SOLUTION</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="white-box">
                    <h3>Basic Plan</h3>
                    <p>$99/month</p>
                    <a class="nav-link text-dark" asp-area="" asp-controller="BuyPackages" asp-action="Index">
                        <div class="btn btn-book">Book Now</div>
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="white-box">
                    <h3>Advanced Plan</h3>
                    <p>$199/month</p>
                    <a class="nav-link text-dark" asp-area="" asp-controller="BuyPackages" asp-action="Index">
                        <div class="btn btn-book">Book Now</div>
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="white-box">
                    <h3>Premium Plan</h3>
                    <p>$299/month</p>
                    <a class="nav-link text-dark" asp-area="" asp-controller="BuyPackages" asp-action="Index">
                        <div class="btn btn-book">Book Now</div>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row light-orange-box">
        <div class="col-md-8">
            <p class="bold-text">USE CAM’ON FOR YOUR CAMERA.</p>
            <p class="small-text">Home & Enterprise Truly Unlimited Features!</p>
        </div>
        <img src="~/HomeImages/cameraImage3.png" alt="Camera Image" class="col-md-4 img-fluid">
    </div>
    <div class="row">
        <div class="orange-box">
            <p class="bold-text">Book Now For More Sale!</p>
        </div>
    </div>
    <div class="row">
        <img src="~/HomeImages/cameraImage4.png" alt="Demo Image" class="img-fluid">
    </div>
</div>