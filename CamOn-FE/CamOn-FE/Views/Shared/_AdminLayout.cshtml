<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<style>
    .sidebar {
        background-color: white;
        border: 2px solid orange;
        height: 100vh; /* Full height */
        padding-top: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        position: fixed; /* Make sidebar fixed */
        top: 0;
        left: 0;
        width: 250px; /* Fixed width for sidebar */
        overflow-y: auto; /* Enable scrolling within the sidebar if needed */
    }

    .content {
        margin-left: 250px; /* Left margin to account for sidebar width */
        padding: 20px;
    }

    .navbar-brand {
        display: flex;
        justify-content: center;
        width: 100%;
        padding: 10px;
        border-bottom: 2px solid orange;
    }

        .navbar-brand img {
            width: 80%; /* Adjust this value to make the logo smaller */
            height: auto; /* Maintain aspect ratio */
        }

    #sidebar .nav-link {
        color: #000;
        padding: 10px 15px;
    }

        #sidebar .nav-link:hover {
            background-color: #f8f9fa;
            color: #007bff;
        }

</style>
<body>


    <div class="container-fluid">
        <div class="row">
            <div class="sidebar">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/webLogo.jpg" alt="Logo">
                </a>
                <nav class="navbar navbar-expand-md navbar-light">
                    <div class="collapse navbar-collapse" id="sidebar">
                        <ul class="navbar-nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="AssignPackages">Assign Packages</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Users" asp-action="Index">User</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Cameras" asp-action="Index">Camera</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Packages" asp-action="Index">Package</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="UserPackages" asp-action="Index">User Packages</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
            <div class="content col-9">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
